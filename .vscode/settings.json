{
  // Verwende genau diese venv
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",

  // Hilf Pylance beim Finden von Paketen (egal ob 3.12 oder 3.13)
  "python.analysis.extraPaths": [
    "${workspaceFolder}/venv/lib/python3.12/site-packages",
    "${workspaceFolder}/venv/lib/python3.13/site-packages"
  ],

  // venv beim Ã–ffnen des Terminals automatisch aktivieren
  "terminal.integrated.activateEnvironment": true
}